package repeticao;

import javax.swing.JOptionPane;

public class Exercicio2 {

	public static void main(String[] args) {
		String nome = JOptionPane.showInputDialog("Digite seu nome");
		String escolaridade = JOptionPane.showInputDialog("Escolaridade");
		String superior = "superior";
		String medio = "medio";
		String pos = "pos";
		
		while (!escolaridade.equalsIgnoreCase("superior")) {
			escolaridade = JOptionPane.showInputDialog("Escolaridade invalida digite novamente");
		}
		while (!escolaridade.equalsIgnoreCase("medio")) {
			escolaridade = JOptionPane.showInputDialog("Escolaridade invalida digite novamente");
		}
		while (!escolaridade.equalsIgnoreCase("pos")) {
			escolaridade = JOptionPane.showInputDialog("Escolaridade invalida digite novamente");
		}
		System.out.println(nome + escolaridade);
		
		
	
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
